<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal" 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    >
    
<!-- had some trouble here getting multi-line list views to work properly
     the eventual fix was for each of the layout_height to be fill_parent, and all of the
     gravities to be center_vertical
 -->


    <TextView
        android:id="@+id/item_row_item_name"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="4"
        android:text="testName"
        android:paddingLeft="30dp"
        android:textSize="17dp"
        android:gravity="center_vertical"
        android:paddingBottom="5dp"
        tools:ignore="HardcodedText"
        />
    
    <TextView
        android:id="@+id/item_row_item_rating"
        android:layout_width="0dp"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="right|center_vertical"
        android:paddingRight="20dp"
        android:text="testQty"
        android:textSize="16dp"
        android:paddingBottom="5dp"
        tools:ignore="HardcodedText"
        />
    
</LinearLayout>
